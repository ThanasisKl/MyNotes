@model User
@{
    ViewData["Title"] = "Login";
}

<div class="tab-content">
  <h2 style="color:#0d6efd" class="mt-5 ml-auto text-center display-2">MyNotes</h2>
  <div class="tab-pane fade show active mt-5"  role="tabpanel" aria-labelledby="tab-login">
    <form method="post" asp-action="Login">
      <div class="mb-4 mt-3">
        <input asp-for="Username" type="text" id="loginName" class="form-control inputs" placeholder="Username" />
      </div>

      <div class="input-group mb-4 inputs">
          <input asp-for="Password"  class="form-control" id="password" name="password" placeholder="Password" value="" type="password">
          <span class="input-group-text" id="password-icon">
            <i class="bi bi-eye-fill" id="togglePassword" style="cursor: pointer"></i>
          </span>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block mb-4 px-5 py-2">Sign in</button>
      </div>

      <div class="text-center">
        <p>Not a member? <a asp-area="" asp-controller="Home" asp-action="Register">Register</a></p>
      </div>
    </form>
  </div>
</div>
<script src="~/js/login.js" asp-append-version="true"></script>